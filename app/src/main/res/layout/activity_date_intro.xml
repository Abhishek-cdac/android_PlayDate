<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/date_intro_bg"
    android:padding="@dimen/_20sdp">

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/ic_playdate" />

    <Button
        android:id="@+id/tv_create_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_accept_date"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/btn_pink_filled"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/create_date"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />

    <Button
        android:id="@+id/tv_accept_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        android:background="@drawable/login_button"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/accept_date"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_10sdp" />


</RelativeLayout>