<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_back">

    <ImageView
        android:id="@+id/medal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60sdp"
        android:scaleType="fitXY"
        android:src="@drawable/cupid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medal">

        <TextView
            android:id="@+id/winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lato_bold"
            android:text="Lucky Day!"
            android:textColor="@color/white"
            android:textSize="@dimen/_32sdp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:fontFamily="@font/helvetica_neue"
            android:text="You and Kayla are a Match!"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_me"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:src="@drawable/model1"
                app:civ_border_color="@android:color/transparent" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_30sdp"
                android:layout_toRightOf="@+id/profile_image_me"
                android:src="@drawable/ic_add" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_other"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/model2"
                app:civ_border_color="@android:color/transparent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pink_filled"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_10sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/send_msg"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/keep_looking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/login_button"
            android:text="@string/keep_looking1"
            android:paddingVertical="@dimen/_8sdp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>