<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColour"
    android:paddingHorizontal="@dimen/_12sdp"
    android:paddingVertical="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/ll_searchDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image_friend"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/diamond"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignStart="@+id/card"
                android:layout_alignTop="@+id/card"
                android:src="@drawable/ic_diamond_normal"
                android:visibility="gone" />


        </RelativeLayout>


        <TextView
            android:id="@+id/name_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold"
            android:paddingHorizontal="@dimen/_6sdp"
            android:textColor="@color/textColour"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/point"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/_0_points"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/textColour"
            android:visibility="visible" />

    </LinearLayout>


</RelativeLayout>