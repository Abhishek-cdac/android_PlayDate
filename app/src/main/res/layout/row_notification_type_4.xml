<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/_8sdp"
    android:background="@color/backgroundColour"
    android:id="@+id/rl_header"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_3"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/model1"
        app:civ_border_color="@android:color/transparent" />

    <TextView
        android:layout_marginLeft="@dimen/_5sdp"
        android:id="@+id/tv_name_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/profile_image_3"
        android:text="Smitha"
        android:maxLines="2"
        android:textColor="@color/textColour"
      />

    <TextView
        android:id="@+id/tv_desc_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_name_noti"
        android:text="Answered on your picture"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_20sdp"
        android:textColor="@color/textColour" />



    <ImageView
        android:id="@+id/iv_icon_3"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_desc_noti"
        android:src="@drawable/message_icon" />

</RelativeLayout>