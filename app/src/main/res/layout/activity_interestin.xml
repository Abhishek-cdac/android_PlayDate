<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="InterestInViewModel"
            type="com.playdate.app.ui.register.interestin.InterestInViewModel" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:onClick="@{(v) -> InterestInViewModel.onBack(v)}"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/txt_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_bold"
                android:gravity="start"
                android:text="@string/interestin"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:fontFamily="@font/lato_bold"
                android:gravity="start"
                android:text="@string/please_select_your_sex_orie"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_otp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/normal_btn_back"
                android:elevation="@dimen/_15sdp"
                android:onClick="@{(v) -> InterestInViewModel.onMale(v)}"
                android:padding="@dimen/_15sdp"
                android:text="@string/male"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_25sdp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <Button
                android:id="@+id/btn_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_otp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/normal_btn_back"
                android:elevation="@dimen/_15sdp"
                android:onClick="@{(v) -> InterestInViewModel.onFemale(v)}"
                android:padding="@dimen/_15sdp"
                android:text="@string/female"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_25sdp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


            <Button
                android:id="@+id/btn_non_binary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_otp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/normal_btn_back"
                android:elevation="@dimen/_15sdp"
                android:onClick="@{(v) -> InterestInViewModel.onNonBin(v)}"
                android:padding="@dimen/_15sdp"
                android:text="@string/non_binary"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/arrow_back_circle"
            android:onClick="@{(v) -> InterestInViewModel.onNext(v)}"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

</layout>