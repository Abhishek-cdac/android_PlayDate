<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hscFilterLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:scrollbars="none"
    android:visibility="gone">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="colorEffectFilter"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivEffectNone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivEffectNone"
                android:layout_centerHorizontal="true"
                android:text="None"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlAqua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="colorEffectFilter"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivEffectAqua"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_drop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivEffectAqua"
                android:layout_centerHorizontal="true"
                android:text="@string/aqua"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBlackBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="colorEffectFilter">

            <ImageView
                android:id="@+id/ivBlackBoard"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_blackboard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivBlackBoard"
                android:layout_centerHorizontal="true"
                android:text="@string/black"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="colorEffectFilter">

            <ImageView
                android:id="@+id/ivMono"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_filter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivMono"
                android:layout_centerHorizontal="true"
                android:text="@string/mono"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlNegative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="colorEffectFilter">

            <ImageView
                android:id="@+id/ivNegative"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_film" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivNegative"
                android:layout_centerHorizontal="true"
                android:text="@string/negative"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPosterized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="colorEffectFilter">

            <ImageView
                android:id="@+id/ivPosterized"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_poster" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivPosterized"
                android:layout_centerHorizontal="true"
                android:text="@string/posterize"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlSepia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="colorEffectFilter">

            <ImageView
                android:id="@+id/ivSepia"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_gold_medal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivSepia"
                android:layout_centerHorizontal="true"
                android:text="@string/sepia"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlSolarized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="colorEffectFilter">

            <ImageView
                android:id="@+id/ivSolarized"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_sun" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivSolarized"
                android:layout_centerHorizontal="true"
                android:text="@string/solarize"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlWhiteBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="colorEffectFilter">

            <ImageView
                android:id="@+id/ivWhiteBoard"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_white_board" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivWhiteBoard"
                android:layout_centerHorizontal="true"
                android:text="@string/whiteboard"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>


</HorizontalScrollView>