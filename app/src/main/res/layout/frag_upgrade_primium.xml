<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/_7sdp">

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lato_bold"
            android:text="@string/premiun_upgrade"
            android:textColor="@color/color_pink"
            android:textSize="@dimen/_22sdp" />

        <ImageView
            android:id="@+id/iv_c"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/couple8" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_c"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/ic_checkbox">

            </ImageView>

            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="@dimen/_15sdp"
                android:fontFamily="@font/lato_bold"
                android:text="5 Play Coins Every Month"
                android:textColor="@color/textColour"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/ic_checkbox">

            </ImageView>

            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:elevation="@dimen/_15sdp"
                android:fontFamily="@font/lato_bold"
                android:text="5 DM Power Ups Every Month"
                android:textColor="@color/textColour"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"

                android:src="@drawable/ic_checkbox">

            </ImageView>

            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:elevation="@dimen/_15sdp"
                android:fontFamily="@font/lato_bold"
                android:text="1 Point Multiplier Unlocked"
                android:textColor="@color/textColour"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"

                android:src="@drawable/ic_checkbox">

            </ImageView>

            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:elevation="@dimen/_15sdp"
                android:fontFamily="@font/lato_bold"
                android:text="Exclusive Discounts to Events and Location"
                android:textColor="@color/textColour"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"

                android:src="@drawable/ic_checkbox">

            </ImageView>

            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:elevation="@dimen/_15sdp"
                android:fontFamily="@font/lato_bold"
                android:text="Access To All The Games"
                android:textColor="@color/textColour"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll5"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_24sdp"
                android:background="@drawable/outline_pink_box"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:text="Monthly\n Plan"
                    android:textAlignment="center"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:textColor="@color/textColour"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/lato_bold"
                    android:text="$10.99"
                    android:textColor="@color/textColour"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_24sdp"
                android:background="@drawable/outline_pink_box"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:text="Yearly Plan"
                    android:textAlignment="center"
                    android:textColor="@color/textColour"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/lato_bold"
                    android:text="$120.99"
                    android:textColor="@color/textColour"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:background="@drawable/pink_rect_filled"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|top"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text="Semi - Anuual Plan"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/lato_bold"
                        android:text="$120.99"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_18sdp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_diamond_normal" />
            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
