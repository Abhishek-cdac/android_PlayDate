<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_12sdp"
    android:paddingVertical="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:id="@+id/card"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image_friend"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_38sdp"
                    android:scaleType="fitXY"
                    android:background="@color/white"
                    android:src="@drawable/profile" />

            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_alignTop="@+id/card"
                android:layout_alignLeft="@+id/card"
                android:id="@+id/diamond"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone"
                android:src="@drawable/diamond_normal" />



        </RelativeLayout>


        <TextView
            android:id="@+id/name_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold"
            android:paddingHorizontal="@dimen/_6sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/friend_request"
            android:layout_width="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/send_request" />

    </LinearLayout>


</RelativeLayout>