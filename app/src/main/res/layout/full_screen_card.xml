<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_image"
        android:padding="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/item_fullScreen"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_maximize"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/item_premium"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="0.8"
            android:src="@drawable/ic_diamond_normal" />

        <ImageView
            android:id="@+id/iv_video_play"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="0.1"
            android:src="@drawable/play_circle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradation_black"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:singleLine="true"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_26sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:padding="@dimen/_5sdp"
                android:text=","
                android:singleLine="true"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_26sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_age"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_26sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_online" />


        </LinearLayout>

        <TextView
            android:id="@+id/item_hobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/item_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:src="@drawable/ic_check_tinder" />


            <ImageView
                android:id="@+id/item_message"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="0.2"
                android:src="@drawable/chat"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/item_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:src="@drawable/ic_cross_tinder" />



        </LinearLayout>

    </LinearLayout>
</RelativeLayout>