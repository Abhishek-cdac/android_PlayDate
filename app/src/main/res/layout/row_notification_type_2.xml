<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:background="@color/backgroundColour"
    android:id="@+id/rl_header"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_3"
        android:layout_weight=".1"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:civ_border_color="@android:color/transparent" />

    <TextView
        android:layout_weight="1"

        android:layout_marginLeft="@dimen/_5sdp"
        android:id="@+id/tv_name_noti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAllCaps="false"

        android:layout_toRightOf="@+id/profile_image_3"
        android:textColor="@color/textColour"
      />

    <TextView
        android:id="@+id/tv_desc_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:visibility="gone"
        android:layout_toRightOf="@+id/tv_name_noti"
        android:textColor="@color/textColour" />



    <ImageView

        android:id="@+id/iv_icon_3"
        android:layout_width="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/tv_desc_noti"
         />
    </LinearLayout>
</RelativeLayout>