<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">




    <TextView
        android:id="@+id/txt_header_Suggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"

        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="Suggestions For You"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_suggestion"
        android:layout_width="match_parent"

        android:foregroundGravity="center"
        android:layout_centerInParent="true"
        android:overScrollMode="never"
        android:clipToPadding="false"

        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_footer_see_more"
        android:layout_below="@+id/txt_header_Suggestions">

    </androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/txt_footer_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"

        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="See More Suggestions"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

</RelativeLayout>