<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_header"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/iv_close"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_30sdp"
        android:src="@drawable/cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="@string/coupon_create"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_below="@+id/text_coupon"
                android:id="@+id/img_coupons"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/business_ic_flat" />

            <RelativeLayout
                android:id="@+id/rl_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_coupons"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/path"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rl_code_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/tv_ur_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ur_discount"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ur_code"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:text="AUX52NJHJ"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <View
                    android:id="@+id/view_divider"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/rl_code_inner"
                    android:background="@color/white" />

                <RelativeLayout
                    android:id="@+id/copy_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/view_divider"
                    android:padding="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/copy"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/copy"
                        android:layout_centerHorizontal="true"
                        android:text="@string/code"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/share_coupans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@+id/rl_code"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:text="@string/share_code"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/rl_social"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp"
                android:gravity="center|bottom"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/facebook_coupan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/blue_rectangle"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/facebook_logo" />

                <ImageView
                    android:id="@+id/instagram_coupan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/grey_rectangle"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_instagram" />

                <ImageView
                    android:id="@+id/whatsup_coupan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/grey_rectangle"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/icons_whatsapp" />

                <ImageView
                    android:id="@+id/message_coupan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/green_rectangle"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/speech_bubble" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>