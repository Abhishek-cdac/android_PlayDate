<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="CoupleBioViewModel"
            type="com.playdate.app.couple.ui.register.couplebio.CoupleBioViewModel" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:onClick="@{(v) -> CoupleBioViewModel.onBack(v)}"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/txt_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_bold"
                android:gravity="start"
                android:text="@string/couple_bio"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:fontFamily="@font/lato_bold"
                android:gravity="start"
                android:text="@string/couple_short_note"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/edt_couplebio"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="start|top"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rect_normal"
                android:gravity="start"
                android:hint="Type how you met with your partner"
                android:maxLength="2000"
                android:maxLines="5"
                android:minLines="4"
                android:padding="@dimen/_12sdp"
                android:text="@={CoupleBioViewModel.BioText}"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/arrow_back_circle"
            android:onClick="@{(v) -> CoupleBioViewModel.onNext(v)}"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

</layout>