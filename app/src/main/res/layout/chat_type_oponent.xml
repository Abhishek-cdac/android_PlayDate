<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_oponent"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:src="@drawable/model1"
        app:civ_border_color="@android:color/transparent" />

    <TextView
        android:id="@+id/tv_chat_oponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@+id/profile_image_oponent"
        android:background="@drawable/btn_pink_filled"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="Hey myron! how are you"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />


    <ImageView
        android:id="@+id/chat_image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@+id/profile_image_oponent"
        android:src="@drawable/profile" />

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@+id/profile_image_oponent"
        app:cardBackgroundColor="@color/white"
        android:visibility="gone"
        android:id="@+id/card_image"
        app:cardCornerRadius="@dimen/_10sdp">

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_post_image"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:background="@color/color_grey_too_light"-->
        <!--            android:foregroundGravity="center"-->
        <!--            android:src="@drawable/profile"-->
        <!--            android:visibility="gone" />-->

        <VideoView
            android:id="@+id/chat_video"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_playback"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_pause"
            android:visibility="visible" />

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_mute_unmute"-->
        <!--            android:layout_width="@dimen/_20sdp"-->
        <!--            android:layout_height="@dimen/_20sdp"-->
        <!--            android:layout_gravity="bottom|start"-->
        <!--            android:layout_marginStart="@dimen/_10sdp"-->
        <!--            android:layout_marginBottom="@dimen/_10sdp"-->
        <!--            android:src="@drawable/ic_unmute"/>-->

    </androidx.cardview.widget.CardView>


</RelativeLayout>