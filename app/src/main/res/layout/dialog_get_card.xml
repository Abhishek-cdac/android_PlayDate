<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:text="Select Card Type"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />
    <RelativeLayout
        android:id="@+id/rl_visa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/round_outline_pink"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="69dp"
            android:layout_alignParentStart="true"
            android:background="@color/backgroundColour"
            android:src="@drawable/visa" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/ellipse1"
            android:padding="@dimen/_6sdp"
            android:id="@+id/iv_visa"
            android:src="@drawable/checkbox" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_master"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/round_outline_pink"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="69dp"
            android:layout_alignParentStart="true"
            android:background="@color/backgroundColour"
            android:src="@drawable/master_card" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ellipse1"
            android:padding="@dimen/_6sdp"
            android:visibility="gone"
            android:id="@+id/iv_master"
            android:src="@drawable/checkbox" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/rl_pay"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/round_outline_pink"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="69dp"
            android:layout_alignParentStart="true"
            android:background="@color/backgroundColour"
            android:src="@drawable/paypal" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/iv_pay"
            android:background="@drawable/ellipse1"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/checkbox" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/rl_amex"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/round_outline_pink"
        android:padding="@dimen/_12sdp">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="69dp"
            android:layout_alignParentStart="true"
            android:background="@color/backgroundColour"
            android:src="@drawable/amex" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_amex"
            android:visibility="gone"
            android:background="@drawable/ellipse1"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/checkbox" />


    </RelativeLayout>

</LinearLayout>