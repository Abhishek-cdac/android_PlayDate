<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_chat_landing"
    android:background="@color/backgroundColour"
    tools:context=".ui.chat.request.RequestChatFragment">

    <RelativeLayout
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/back_anonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_arrow_back_black" />

        <LinearLayout
            android:id="@+id/ll_her"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/iv_play_date_logo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"

                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_weight="1"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_playdate" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"

            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:paddingRight="@dimen/_10sdp">


            <ImageView
                android:id="@+id/iv_chat_notification"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="end|center"
                android:scaleType="fitXY"

                android:src="@drawable/ic_bell" />

            <TextView
                android:id="@+id/txt_count"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/round_pink_fill"
                android:foregroundGravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:visibility="gone">

            </TextView>
        </RelativeLayout>

    </RelativeLayout>


    <EditText
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:id="@+id/edt_search_chat"
        android:hint="  Search"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/bg_dull_pink"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_page"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:tabGravity="fill"
            app:tabTextAppearance="@style/CustomTabs"
            android:textAlignment="center"
            app:tabIndicatorColor="@color/color_pink"
            app:tabIndicatorGravity="bottom"
            app:tabSelectedTextColor="@color/textColour"
            app:tabTextColor="@color/blue_grey" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab" />

    </RelativeLayout>


</LinearLayout>