<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColour"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_8sdp">

    <RelativeLayout
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_4sdp">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_arrow_black" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/arrow_back"
            app:civ_border_color="@android:color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_8sdp">

            <TextView
                android:id="@+id/chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColour"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:src="@drawable/ic_online"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/txt_active_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:text="Active Now"
                    android:visibility="gone"
                    android:textColor="@color/color_grey"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>




        </LinearLayout>


        <ImageView
            android:id="@+id/iv_video_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_video_call"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_delete_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_icon_bin"
            android:visibility="gone" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@+id/rv_smileys"
        android:layout_below="@+id/main_menu"
        android:layout_marginBottom="@dimen/_5sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </androidx.core.widget.NestedScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_smileys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_menu"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/backgroundColour">

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/_4sdp"
            android:src="@drawable/ic_add_circle" />

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_circle"
            android:paddingHorizontal="@dimen/_4sdp"
            android:src="@drawable/ic_camera" />

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_camera"
            android:paddingHorizontal="@dimen/_4sdp"
            android:src="@drawable/photo_video" />

        <ImageView
            android:id="@+id/iv_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-1dp"
            android:layout_toRightOf="@+id/iv_video"
            android:paddingHorizontal="@dimen/_4sdp"
            android:src="@drawable/ic_voice" />

        <RelativeLayout
            android:id="@+id/msg_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_toStartOf="@+id/iv_send"
            android:layout_toEndOf="@+id/iv_mic"
            android:background="@drawable/login_button"
            android:paddingHorizontal="@dimen/_8sdp">

            <EditText
                android:id="@+id/et_chat"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:backgroundTint="@android:color/transparent"
                android:focusable="true"
                android:focusedByDefault="true"

                android:hint="@string/text_here"
                android:textColor="@color/textColour"
                android:textColorHint="@color/color_grey"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/iv_smiley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingHorizontal="@dimen/_5sdp"
                android:src="@drawable/smile" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/_2sdp"
            android:src="@drawable/ic_send" />


    </RelativeLayout>


</RelativeLayout>